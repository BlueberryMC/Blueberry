@@ -54,6 +54,17 @@ public class HashMapPalette<T> implements Palette<T> {
     public T valueFor(int i) {
         T object = this.values.byId(i);
         if (object == null) {
+            // Blueberry start
+            // TODO: figure out why Thread.sleep(1) works; maybe race condition?
+            try {
